---
layout: default
---

<article class="h-entry mt-4">
  <h1 class="title has-text-centered">{{ page.title }}</h1>

  <section class="section">
    <div class="container">
        {%- assign image = page.image %}
        {%- if image %}
          <div class="mb-4 has-text-centered p-author">
            <img src={{ image }} />
          </div>
        {%- endif %}

      <div class="content">
        <p class="is-flex is-align-content-center">
          <span class="icon">
            <ion-icon name="link-outline"></ion-icon>
          </span>
          <span>
            <a href="{{ page.link }}">{{ page.title }}</a>
          </span>
        </p>
        <p class="is-flex is-align-content-center">
          <span class="icon">
            <ion-icon name="logo-github"></ion-icon>
          </span>
          <span>
            <a href="{{ page.github }}">{{ page.github }}</a>
          </span>
        </p>

        {{ content }}
      </div>
    </div>
  </section>
</article>
