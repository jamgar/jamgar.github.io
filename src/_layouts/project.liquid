---
layout: default
---

<article class="mt-4 mx-auto w-full max-w-2xl prose lg:prose-xl">
  <h1 class="my-8 text-center text-4xl font-bold text-gray-800 tracking-tight leading-none md:text-5xl xl:text-6xl">
  {{ page.title }}
  </h1>

  <section class="">
    <div class="">
        {%- assign image = page.image %}
        {%- if image %}
          <div class="">
            <img src={{ image }} />
          </div>
        {%- endif %}

      <div class="">
        <p class="">
          <span class="icon">
            <ion-icon name="link-outline"></ion-icon>
          </span>
          <span>
            <a href="{{ page.link }}">{{ page.title }}</a>
          </span>
        </p>
        <p class="">
          <span class="icon">
            <ion-icon name="logo-github"></ion-icon>
          </span>
          <span>
            <a href="{{ page.github }}">{{ page.github }}</a>
          </span>
        </p>

        {{ content }}
      </div>
    </div>
  </section>
</article>
